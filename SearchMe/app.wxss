/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.news {
    padding: 10rpx 0rpx 0rpx 0rpx;
    position: relative;
}
.news-title {
    color: #AAAAAA;
    margin-left: 20rpx;
}
.news-item {
    margin: 5rpx 100rpx 0rpx 0; 
    background-color: #fff;
    height: 120rpx;
    width: 100%;
}
.news-item-pic {
    /*background-color: rebeccapurple;*/
    padding: 0;
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx;
    float: left;
}
.news-item-image {
    width: 100%;
    height: 100%;
    border-radius: 40rpx;
}
.news-item-words {
    /*background-color: cyan;*/
    width: 80%;
    height: 100%;
    overflow-y: hidden;
}
.news-item-title {
    font-size: 11pt;
    word-break: break-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    justify-content: space-around;
    line-height: 120rpx;
}